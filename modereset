#!/usr/bin/env bash

reset_current_mode() {
	if [ -d /usr/portage/.git ] ; then
		for i in "(ls /usr/portage|grep -v packages|grep -v distfiles)"; do
			rm -rf $i
		done
		rm -rf /usr/portage/.git*
		rm /etc/portage/make.conf
		rm /etc/portage/make.profile
		rm /etc/portage
	fi
}

main () {
	reset_current_mode
}
main
